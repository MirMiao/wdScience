<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="为什么每天这么多负面新闻，我的同情心都快被耗尽了"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_title"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_10"
            android:id="@+id/tv_time"

            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2018-09-29 12:17"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_source"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:text="本文转自微信公众号：果壳（ID：GuoKr24），作者：李子，编辑：Event"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tv_image"
            android:background="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_150"/>
        <WebView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/web_content"
            android:layout_height="wrap_content"/>
          <ImageView
              android:layout_width="match_parent"
              android:id="@+id/iv_shangweigoumai"
              android:layout_marginTop="@dimen/dp_10"
              android:visibility="gone"
              android:src="@drawable/shangweigoumai"
              android:layout_height="@dimen/dp_70"/>
          <Button
              android:layout_width="@dimen/dp_250"
              android:layout_centerHorizontal="true"
              android:background="@drawable/nobuy_shape"
              android:text="尚未购买，付费再来阅读吧"
              android:layout_marginTop="@dimen/dp_10"
              android:visibility="gone"
              android:textSize="@dimen/sp_16"
              android:textColor="#ffffff"
              android:id="@+id/bt_shangweigoumai"
             android:layout_gravity="center_horizontal"
              android:layout_height="@dimen/dp_40"/>

</LinearLayout>