<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/communitylist_headim"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/communitylist_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/communitylist_time"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/hui2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/communitylist_qianming"
                    android:textColor="@color/hui2"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/communitylist_neirong"
        android:textColor="@color/hui2"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/communitylist_tupian"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/community_pinglun"
            android:id="@+id/communitylist_pinglun"
            android:layout_marginLeft="340dp"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/communitylist_comment"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/communitylist_zan"
            android:background="@mipmap/community_zan"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/communitylist_praise"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pinglun"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quanbupinglun"
        android:text="点击查看更多评论"
        android:layout_gravity="center"
        android:textColor="@color/colorB"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:id="@+id/quxieping"
        android:background="@mipmap/community_xieping"
        />

</LinearLayout>
