<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_marginLeft="@dimen/dp_12"
      android:layout_marginRight="@dimen/dp_12"
      android:layout_height="@dimen/dp_24">
      <TextView
          android:layout_width="wrap_content"
          android:text="选择付费方式"
          android:textSize="@dimen/sp_20"
          android:textColor="#666666"
          android:layout_height="wrap_content"/>
      <ImageView
          android:layout_width="@dimen/dp_24"
          android:layout_alignParentRight="true"
          android:id="@+id/iv_quxiao"
          android:src="@drawable/bottom_jt"
          android:layout_height="@dimen/dp_24"/>
  </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:textColor="#999999"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:text="让阅读随时随地"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/orange_bg"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_height="@dimen/dp_120">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="积分兑换"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Integral purchase"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="购买说明:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:autoSizeMaxTextSize="@dimen/dp_6"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="只需一次性付费即可对该条资讯永久免费阅读"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/dp_38"
               android:src="@drawable/youtong2"
               android:layout_height="@dimen/dp_38"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="点击兑换>>"
                android:textColor="#ffffff"
                android:id="@+id/tv_duihuan"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/green_bg"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_height="@dimen/dp_120">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="开通会员"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="membership purchase"
                    android:textSize="@dimen/sp_10"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="购买说明:"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:autoSizeMaxTextSize="@dimen/dp_6"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="会员可以免费阅读所有付费资讯"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/dp_38"
               android:src="@drawable/vip2"
               android:layout_height="@dimen/dp_38"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="点击开通>>"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:id="@+id/tv_kaitong"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>