<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.messageactivity.CrowdHomePageActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/crowd_background"
            ></ImageView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:onClick="back"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="12dp"
            ></ImageView>
        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="220dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="290dp"
            android:id="@+id/crowd_head"
            ></ImageView>
        ></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginTop="33dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群人数"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:id="@+id/crowd_member_count"
            ></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:id="@+id/btn_crowd_member"
            android:src="@drawable/common_icon_next_n_xhdpi"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群名称"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/crowd_name"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群成员"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:id="@+id/btn_crowd_introduce"
            android:src="@drawable/common_icon_next_n_xhdpi"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群通知"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:id="@+id/btn_crowd_infrom"
            android:src="@drawable/common_icon_next_n_xhdpi"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群管理"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></TextView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#000"
            android:layout_margin="10dp"
            android:id="@+id/btn_crowd_manage"
            android:src="@drawable/common_icon_next_n_xhdpi"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_crowd_chatrecord"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询聊天记录"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></TextView>
    </LinearLayout>
    <Button
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textColor="#fff"
        android:background="#FF5722"
        android:text="解散群组"
        android:textSize="20sp"
        android:id="@+id/btn_applycrowd"
        ></Button>
</LinearLayout>