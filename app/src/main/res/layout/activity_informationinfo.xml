<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_informationInfo"
                android:layout_height="wrap_content"/>
            <com.wd.tech.view.information.FlowView
                android:layout_width="wrap_content"
                android:id="@+id/flowView"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_40"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="推荐"
                android:textSize="@dimen/dp_10"
                android:id="@+id/tv_tuijian"
                android:textColor="#999999"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_tuijian"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:text="评论"
                android:textSize="@dimen/dp_10"
                android:textColor="#999999"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_pinglun"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:visibility="visible"
        android:id="@+id/mLinearLayout"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:id="@+id/iv_back"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dp_18"/>
        <EditText
            android:layout_width="@dimen/dp_180"
            android:layout_margin="@dimen/dp_10"
            android:backgroundTint="#33666666"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:id="@+id/et_pinglun"
            android:hint="既然来了，就留下点什么吧"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/et"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/pinglun"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dp_20"/>
        <CheckBox
            android:layout_width="@dimen/dp_20"
            android:button="@null"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/zan"
            android:layout_height="@dimen/dp_20"/>
        <CheckBox
            android:layout_width="@dimen/dp_20"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableTop="@drawable/aixin"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_height="@dimen/dp_20"/>
        <CheckBox
            android:layout_width="@dimen/dp_20"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/shar"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:visibility="gone"
        android:id="@+id/mRelativeLayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_80">
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/et"
            android:backgroundTint="#EAE2E2"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:hint="既然来了，就留下点什么吧"
            android:id="@+id/et_PingLuns"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_height="@dimen/dp_70"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="发表"
               android:layout_marginBottom="@dimen/dp_10"
               android:id="@+id/tv_fabiao"
               android:textSize="@dimen/sp_14"
               android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>