<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.messageactivity.CrowdGroupActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:onClick="back"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群组"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            ></TextView>
    </LinearLayout>
    <com.wd.tech.myview.Mysearchview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.wd.tech.myview.Mysearchview>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="我创建的群"
    android:layout_marginLeft="@dimen/dp_12"
    ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mycrowd_group_RecyclerView"
        android:layout_marginTop="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我加入的群"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_12"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myaddcrowd_group_RecyclerView"
        android:layout_marginTop="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>