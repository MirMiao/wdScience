<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/register_icon_phone_n_xxhdpi"></ImageView>

        <EditText
            android:layout_width="match_parent"
            android:hint="手机号"
            android:textColorHint="#eeeeee"
            android:textColor="#eeeeee"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/et"
            android:id="@+id/et_phone"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        />
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/lock"></ImageView>

        <EditText

            android:layout_width="match_parent"
            android:hint="登录密码"
            android:textColor="#eeeeee"
            android:paddingLeft="@dimen/dp_5"
            android:textColorHint="#eeeeee"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/et"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/et_pwd"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="快速注册"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_reghtReg"
        android:layout_marginLeft="100dp"
        android:textColor="#ffffff"></TextView>
    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/logbut"
        android:text="登录"
        android:textSize="18dp"
        android:layout_marginTop="120dp"
        android:id="@+id/bt_login"
        android:textColor="#ffffff"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:text="---------------第三方账号快速登录---------------"
        />
    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/log_weixin"
            android:src="@drawable/weixin"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/log_face"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/face"
            />
    </LinearLayout>

</LinearLayout>