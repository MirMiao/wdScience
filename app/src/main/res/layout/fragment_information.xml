<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_marginTop="@dimen/dp_32"
         android:layout_height="@dimen/dp_24"
         android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:id="@+id/iv_menu"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/home_nav_btn_menu_n_xxhdpi"
            android:layout_height="@dimen/dp_24"/>
         <TextView
             android:layout_width="wrap_content"
             android:text="资讯"
             android:textSize="@dimen/sp_20"
             android:textColor="#000000"
             android:layout_centerInParent="true"
             android:layout_height="wrap_content"/>
         <ImageView
             android:layout_width="@dimen/dp_24"
             android:layout_alignParentRight="true"
             android:id="@+id/iv_serch"
             android:layout_marginRight="@dimen/dp_12"
             android:src="@drawable/common_nav_btn_search_n_xhdpi"
             android:layout_height="@dimen/dp_24"/>
     </RelativeLayout>
     <View
         android:layout_width="match_parent"
         android:background="#33666666"
         android:layout_marginTop="@dimen/dp_14"
         android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_160"
        >
        <com.stx.xhb.androidx.XBanner
            android:layout_width="match_parent"
            android:id="@+id/xbaner"
            app:clipChildrenLeftRightMargin="@dimen/dp_40"
            android:layout_height="@dimen/dp_160"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_xbannerHint"
            android:gravity="center"
            android:textColor="#ffffff"
            android:maxEms="20"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:text="sdsdsd"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>