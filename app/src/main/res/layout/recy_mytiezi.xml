<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiezi_content"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiezi_im"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tiezi_time"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tiezi_shan"
            android:text="删除"
            android:textColor="@color/colorB"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/community_pinglun"
            android:id="@+id/tiezi_pinglun"
            android:layout_marginLeft="300dp"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/tiezi_comment"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/tiezi_zan"
            android:background="@mipmap/community_zan"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/tiezi_praise"
            />
    </LinearLayout>

</LinearLayout>
