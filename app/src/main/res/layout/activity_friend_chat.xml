<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.messageactivity.FriendChatActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:onClick="back"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好友名称"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            android:id="@+id/friend_name"
            ></TextView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/nav_btn_settingdan_n_xhdpi"
            android:id="@+id/btn_friendchatsetting"
            android:layout_marginRight="12dp"
            ></ImageView>
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/friendchat_RecyclerView"
                android:fitsSystemWindows="true"
                android:layout_weight="1"
                ></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3E3E3"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:id="@+id/friend_content"
            android:background="@drawable/shape"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_margin="@dimen/dp_10"
            ></EditText>
        <TextView
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:text="发送"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/btn_send"
            android:textColor="#C1C1C1"
            android:enabled="false"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shapesend"
            ></TextView>
    </LinearLayout>
</LinearLayout>